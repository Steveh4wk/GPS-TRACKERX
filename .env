# GPS Danger Zone Tracker - Environment Variables
# Configurazione compilata e pronta all'uso

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="GPS Danger Zone Tracker"
APP_VERSION="1.0.0"
APP_DEBUG=true
APP_LOG_LEVEL="DEBUG"

# =============================================================================
# GPS CONFIGURATION
# =============================================================================
# GPS source: serial, file, api, simulation
GPS_SOURCE_TYPE="simulation"

# Serial GPS settings (for hardware GPS devices)
GPS_SERIAL_PORT="COM3"
GPS_BAUD_RATE=9600
GPS_TIMEOUT=1
GPS_UPDATE_INTERVAL=2.0

# File-based GPS settings
GPS_FILE_PATH="data/sample_track.gpx"

# API GPS settings (lascia vuoto se non usi API)
GPS_API_URL=""
GPS_API_KEY=""

# =============================================================================
# ZONE MANAGEMENT
# =============================================================================
ZONES_CHECK_INTERVAL=3.0
ZONES_BUFFER_DISTANCE=15.0
ZONES_UNITS="meters"
ZONES_DEFAULT_RADIUS=150.0

# =============================================================================
# ALERT SYSTEM
# =============================================================================
ALERTS_ENABLED=true
# Comma-separated list: desktop,sound,email,log
ALERTS_TYPES="desktop,sound,log"
ALERTS_SOUND_FILE="alerts/warning.wav"
ALERTS_COOLDOWN_PERIOD=30

# Email alert settings (configurare solo se necessario)
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_USERNAME="tuo_email@gmail.com"
EMAIL_PASSWORD="tua_app_password"
# Comma-separated list of recipient emails
EMAIL_RECIPIENTS="destinatario1@email.com,destinatario2@email.com"

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_TYPE="sqlite"
DATABASE_PATH="data/tracker.db"
DATABASE_BACKUP_INTERVAL=3600

# =============================================================================
# WEB INTERFACE
# =============================================================================
WEB_ENABLED=true
WEB_HOST="0.0.0.0"
WEB_PORT=8080
WEB_AUTO_OPEN_BROWSER=true
WEB_SECRET_KEY="gps_danger_zone_2024_secret_key_steve"

# =============================================================================
# MAPPING SETTINGS
# =============================================================================
MAP_DEFAULT_ZOOM=15
MAP_TILE_SOURCE="OpenStreetMap"
MAP_CACHE_TILES=true
MAP_OFFLINE_MODE=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FILE="logs/gps_tracker.log"
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# PRIVACY SETTINGS
# =============================================================================
PRIVACY_STORE_LOCATION_HISTORY=true
PRIVACY_DATA_RETENTION_DAYS=30
PRIVACY_ANONYMOUS_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode with extra logging
DEV_MODE=true

# Simulation settings (for testing without real GPS)
# Coordinate di Roma centro per i test
SIMULATION_BASE_LAT=41.9028
SIMULATION_BASE_LON=12.4964
SIMULATION_RADIUS=0.005

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Weather API for weather-dependent zones
WEATHER_API_KEY=""
WEATHER_API_URL="https://api.openweathermap.org/data/2.5/weather"

# SMS/Notification services (Twilio, etc.)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
EMERGENCY_CONTACT_PHONE=""

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable/disable specific features for security
ALLOW_CONFIG_OVERRIDE=true
REQUIRE_AUTH_FOR_WEB=false
WEB_AUTH_USERNAME=""
WEB_AUTH_PASSWORD=""